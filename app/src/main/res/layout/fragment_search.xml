<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/text_margin_128"
        android:gravity="center"
        android:text="@string/search_fragment_title"
        android:textColor="@color/textWhite"
        android:textSize="@dimen/text_size_30"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.mindorks.editdrawabletext.EditDrawableText
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_margin_48"
        android:layout_marginStart="@dimen/text_margin_36"
        android:layout_marginTop="@dimen/text_margin_8"
        android:layout_marginEnd="@dimen/text_margin_36"
        android:background="@drawable/corner_edit_text"
        android:drawableLeft="@drawable/ic_search"
        android:drawableRight="@drawable/ic_send"
        android:paddingStart="@dimen/padding"
        android:paddingEnd="@dimen/padding"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/text_margin_8"
        android:gravity="center"
        android:textColor="@color/textWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="@string/app_version" />
</androidx.constraintlayout.widget.ConstraintLayout>